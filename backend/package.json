{
  "name": "voice-reader-backend",
  "version": "1.0.0",
  "description": "PDF OCR TTS Backend with NAVER CLOVA",
  "main": "src/server.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/server.js --external:@google-cloud/* --external:tesseract.js --external:@google-cloud/text-to-speech",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"npm run build && node dist/server.js\""
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google-cloud/vision": "^5.3.4",
    "axios": "^1.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.0",
    "tesseract.js": "^6.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "esbuild": "^0.19.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.5.0"
  }
}
