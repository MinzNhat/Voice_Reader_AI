# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:19006
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:19006

# API Keys - Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json
GOOGLE_PROJECT_ID=your-project-id

# API Keys - Alternative TTS (Optional)
ELEVENLABS_API_KEY=your-elevenlabs-key
OPENAI_API_KEY=your-openai-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OCR Configuration
OCR_ENGINE=google
OCR_LANGUAGE=vi,en
TESSERACT_PATH=/usr/bin/tesseract

# TTS Configuration
TTS_ENGINE=google
TTS_LANGUAGE=vi-VN
TTS_VOICE=vi-VN-Standard-A
TTS_SPEED=1.0
TTS_PITCH=0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
API_KEY=your-api-key-for-android-app
